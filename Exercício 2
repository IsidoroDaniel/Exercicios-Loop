/* Faça um programa que leia um nome de usuário e a sua senha e não aceite a senha igual ao nome do usuário, mostrando uma mensagem de erro e voltando a pedir as informações. */

console.log("Por favor, crie um nome de usuario e uma senha");

console.log();

let userName = prompt("Digite o nome de usuario");
let password = prompt("Digite uma senha");

while(password == userName) {
  console.log("O nome de usuario e senha não podem ser iguais. Tente novamente")
  userName = prompt("Digite o nome de usuario");
  password = prompt("Digite uma senha");
}
console.log()

console.log("Cadastro efetuado com sucesso!")
